<div class="row">
<div class="col align-self-center">
<h1 class="text-center">Burgers!</h1>
</div>
</div>
<div class="row">
<div class="col-sm">
<h2>That have not been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm">
<h2>That have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2>Add A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burgers Yo!:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="slee">Have you killed this Burger yet?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not yet devoured :(
  </div>

  <button type="submit">Add Burgers</button>
</form>
